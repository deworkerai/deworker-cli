{
  "name": "deworker-cli",
  "version": "1.0.0",
  "description": "",
  "main": "dist/bin/deworker.js",
  "bin": {
    "mete": "./dist/bin/deworker.js"
  },
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:cli": "tsx bin/deworker.ts",
    "dev": "nodemon --watch '*.ts' --exec 'tsx' ./src/index.ts",
    "build": "rm -rf dist && mkdir dist && tsc -p tsconfig.json && node ./scripts/build.js",
    "lint": "eslint . --ext .js,.ts",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier --parser=typescript --write",
      "pnpm lint"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0"
  }
